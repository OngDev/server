{
    "compilerOptions": {
      "outDir": "./build",
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@modules/*": ["src/modules/*"],
        "@routers/*": ["src/routers/*"],
        "@middlewares/*": ["src/middlewares/*"]
      },
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "src/**/*.ts"
    ],
  }